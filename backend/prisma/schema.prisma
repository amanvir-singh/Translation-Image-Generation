generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Translation {
  id              Int      @id @default(autoincrement())
  prompt          String
  model           String
  targetLanguage  String
  translatedText  String
  createdAt       DateTime @default(now())
}

model Image {
  id        Int      @id @default(autoincrement())
  prompt    String
  model     String
  imageUrl  String
  createdAt DateTime @default(now())
}
